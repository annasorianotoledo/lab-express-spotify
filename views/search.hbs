<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each artists as |artist|}}
    <div class="col">
        <div class="card text-bg-dark mb-3">
        <img class="card-body h-300 w-300" src="{{images.[0].url}}" alt="artist-cover">
        <div class="card-title text-center">
          <h3>{{artist.name}}</h3>
          <a class="btn btn-success" href="/albums/{{artist.id}}">View Albums</a>
      </div>
     </div>
    </div>
  {{/each}}
</div>